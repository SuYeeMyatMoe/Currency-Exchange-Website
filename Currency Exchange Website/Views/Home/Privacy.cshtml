<!DOCTYPE html>
    <html>
    <head>
        <title>Register</title>
    </head>
    <body>
    <form class="reg_container" action="/home/privacy" method="post">
        <h2>Register Here</h2>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your name">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter your email">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Enter your password">

        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password">

        <label>Gender:</label>
        <div class="gender">
            <input type="radio" id="male" name="gender" value="male">
            <label for="male">Male</label>
            <input type="radio" id="female" name="gender" value="female">
            <label for="female">Female</label>
        </div>

        <label for="dob">Date Of Birth:</label>
        <input type="date" id="dob" name="dob">

        <label for="city">City:</label>
        <select id="city">
            <option value="Yangon">Yangon</option>
            <option value="Mandalay">Mandalay</option>
            <option value="Naypyidaw">Naypyidaw</option>
        </select>

        <label for="address">Address:</label>
        <textarea id="address" rows="3" placeholder="Enter your address" name="address"></textarea>

        <button type="submit">Register</button>
        <div style="color:red;text-align:center; margin-bottom:10px; margin-top:10px">
            @ViewData["Error"]
        </div>
        <div style="color:green;text-align:center; margin-bottom:10px; margin-top:10px">
            @TempData["Msg"]
        </div>
    </form>
    </body>
    </html>
